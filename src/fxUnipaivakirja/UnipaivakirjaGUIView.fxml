<BorderPane xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="fxUnipaivakirja.UnipaivakirjaGUIController">
   <bottom>
      <HBox spacing="10.0" BorderPane.alignment="CENTER">
         <BorderPane.margin>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </BorderPane.margin>
         <children>
            <Button mnemonicParsing="false" text="Uusi merkintä">
               <tooltip>
                  <Tooltip text="Luo uusi unipäiväkirjamerkintä." />
               </tooltip>
            </Button>
            <Button mnemonicParsing="false" text="Tallenna">
               <tooltip>
                  <Tooltip text="Tallenna unipäiväkirjamerkintä." />
               </tooltip>
            </Button>
            <Button mnemonicParsing="false" text="Poistu">
               <tooltip>
                  <Tooltip text="Poistu unipäiväkirjasta." />
               </tooltip>
            </Button>
         </children>
      </HBox>
   </bottom>
   <top>
      <MenuBar BorderPane.alignment="CENTER">
        <menus>
          <Menu mnemonicParsing="false" text="Tiedosto">
            <items>
              <MenuItem mnemonicParsing="false" text="Tallenna">
                     <accelerator>
                        <KeyCodeCombination alt="UP" code="S" control="DOWN" meta="UP" shift="UP" shortcut="UP" />
                     </accelerator>
                  </MenuItem>
                  <MenuItem mnemonicParsing="false" text="Avaa..." />
                  <MenuItem mnemonicParsing="false" text="Lisää uusi käyttäjä..." />
                  <MenuItem mnemonicParsing="false" text="Poista käyttäjä..." />
                  <MenuItem mnemonicParsing="false" text="Tulosta..." />
                  <MenuItem mnemonicParsing="false" text="Lopeta">
                     <accelerator>
                        <KeyCodeCombination alt="UP" code="Q" control="DOWN" meta="UP" shift="UP" shortcut="UP" />
                     </accelerator>
                  </MenuItem>
            </items>
          </Menu>
          <Menu mnemonicParsing="false" text="Muokkaa">
            <items>
              <MenuItem mnemonicParsing="false" text="Lisää uusi merkintä">
                     <accelerator>
                        <KeyCodeCombination alt="UP" code="N" control="DOWN" meta="UP" shift="UP" shortcut="UP" />
                     </accelerator>
                  </MenuItem>
                  <MenuItem mnemonicParsing="false" text="Poista merkintä..." />
            </items>
          </Menu>
          <Menu mnemonicParsing="false" text="Apua">
            <items>
              <MenuItem mnemonicParsing="false" text="Apua" />
                  <MenuItem mnemonicParsing="false" text="Ohje..." />
                  <MenuItem mnemonicParsing="false" text="Tietoja..." />
            </items>
          </Menu>
        </menus>
      </MenuBar>
   </top>
   <left>
      <BorderPane prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER">
         <top>
            <Label text="Päivämäärä" BorderPane.alignment="CENTER" />
         </top>
         <center>
            <ListChooser rivit="24.1.22&#10;23.1.22&#10;22.1.22&#10;21.1.22&#10;20.1.22&#10;" BorderPane.alignment="CENTER" />
         </center>
      </BorderPane>
   </left>
   <center>
      <ScrollPane fitToWidth="true" prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER">
         <content>
            <GridPane hgap="10.0">
              <columnConstraints>
                <ColumnConstraints fillWidth="false" halignment="RIGHT" hgrow="SOMETIMES" minWidth="10.0" />
                <ColumnConstraints hgrow="ALWAYS" />
              </columnConstraints>
              <rowConstraints>
                <RowConstraints minHeight="10.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" vgrow="SOMETIMES" />
                  <RowConstraints minHeight="10.0" vgrow="SOMETIMES" />
                  <RowConstraints minHeight="10.0" vgrow="SOMETIMES" />
                  <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                  <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
              </rowConstraints>
               <padding>
                  <Insets left="10.0" right="10.0" top="10.0" />
               </padding>
               <children>
                  <Label text="Päivämäärä:" />
                  <Label text="Nukkumaanmenoaika:" GridPane.rowIndex="1" />
                  <Label text="Heräämisaika:" GridPane.rowIndex="2" />
                  <Label text="Unen määrä:" GridPane.rowIndex="3" />
                  <Label text="Lisätietoja:" GridPane.rowIndex="4" />
                  <TextField GridPane.columnIndex="1" GridPane.hgrow="ALWAYS" GridPane.rowIndex="1" />
                  <TextField GridPane.columnIndex="1" GridPane.hgrow="ALWAYS" GridPane.rowIndex="2" />
                  <TextField GridPane.columnIndex="1" GridPane.hgrow="ALWAYS" GridPane.rowIndex="3" />
                  <TextField GridPane.columnIndex="1" GridPane.hgrow="ALWAYS" GridPane.rowIndex="4" />
                  <Label text="Unen laatu:" GridPane.rowIndex="5" />
                  <Label text="Vireystila:" GridPane.rowIndex="6" />
                  <ChoiceBox prefWidth="150.0" GridPane.columnIndex="1" GridPane.rowIndex="5" />
                  <ChoiceBox prefWidth="150.0" GridPane.columnIndex="1" GridPane.rowIndex="6" />
                  <DatePicker GridPane.columnIndex="1" />
               </children>
            </GridPane>
         </content>
      </ScrollPane>
   </center>
</BorderPane>
